Console.WriteLine("Please enter a username");
string filename = Console.ReadLine();
static string createAccount(string username)
{
   
    while (filename.All(char.IsLower) || filename.All(char.IsSymbol) || filename.All(char.IsPunctuation))
    {
        Console.WriteLine("Please enter a username containing atleast one capital letter, that does not contain symbols or punctuation");
        filename = Console.ReadLine();
    }
    string directory = Directory.GetCurrentDirectory();
    string path = Path.Combine(directory, filename);
    if (File.Exists(path))
    {
        while (File.Exists(path))
        {
            Console.WriteLine("This username is taken");
            filename = Console.ReadLine();
        }
    }
    else
    {
        File.Create(path).Dispose();
        Console.WriteLine("Account created successfully");
    }
    var exitinfo = "account" + filename + "Created successfully";
        return exitinfo;
}
