

Console.WriteLine("Please enter your name:");
string userinput = Console.ReadLine();

File.Create("Username.txt");
File.AppendAllText("Username.txt", userinput + Environment.NewLine);

Console.WriteLine("Done! Text written to Username.txt");


string filePath = Path.Combine(Directory.GetCurrentDirectory(), "Username.txt");
Console.WriteLine($"The file will be saved at: {filePath}");
