Console.WriteLine("Welcome to the bank, what would you like to do?" + Environment. + "1: Create an account" + Environment.NewLine + "2: Log in");
int user_choice = Convert.ToInt32(Console.ReadLine());
switch (user_choice) {
    case 1:
        Console.WriteLine("Please enter a username");
        string filename = Console.ReadLine();

        while (filename.Any(c => char.IsSymbol(c) || filename.Any(c => char.IsPunctuation(c) || filename.All(char.IsLower))))
        {
            Console.WriteLine("Please enter a username containing atleast one capital letter or a number, that does not contain symbols or punctuation");
            filename = Console.ReadLine();
        }
        string directory = Directory.GetCurrentDirectory();
        string path = Path.Combine(directory, filename);
        if (File.Exists(path))
        {
            while (File.Exists(path))
            {
                Console.WriteLine("This username is taken");
                filename = Console.ReadLine();
            }
        }
        else
        {
            File.Create(path).Dispose();
            Console.WriteLine("Username accepted, now please enter a password");
        }

        string password = Console.ReadLine();

        File.AppendAllText(path, password);
        Console.WriteLine("Account successfully created");
        break;
    case 2:

        break;
}






